<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Douceur à réaliser</th>
      <th>Description</th>
      <th>Fait ou pas fait ?</th>
      <th>Hop hop, enfourche ton nuage, c'est pour le :</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.state %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

